@model GuestBookApp.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="header">
    <h3>Guest Book</h3>
</div>
<div class="mainReg">
    <form asp-action="Login" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label style="color:#2F4F4F" asp-for="Login"></label><br />
            <input asp-for="Login" class="formControl" /><br />
            <span style="font-size: 8pt" asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div>
            <label style="color:#2F4F4F" asp-for="Password"></label><br />
            <input asp-for="Password" class="formControl" /><br />
            <span style="font-size: 8pt" asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div style="margin-top: 15px; text-align:center">
            <input type="submit" value="Enter" class="button" />
        </div>
        <div style="margin-top: 5px; text-align:center">
            <label style="color:#2F4F4F; font-size: 10pt">
                Don`t have account?
                <a style="border: 0; color: red; font-size: 8pt; box-shadow:none" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
            </label>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}